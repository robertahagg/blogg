{
    "start": {
        "controller": "Default",
        "method": "start"
    },
    "logout": {
        "login": true,
        "controller": "Admin",
        "method": "logout"
    },
    "register": {
        "controller": "Posts",
        "method": "register"
    },
    "newPost": {
        "login": true,
        "controller": "Admin",
        "method": "newPost"
    },
    "editPost": {
        "login": true,
        "controller": "Admin",
        "method": "editPost"
    },
    "deletePost/:id": {
        "login": true,
        "controller": "Admin",
        "method": "delete",
        "params": {
            "id": "number"
        }
    },
    "posts/:page": {
        "controller": "Posts",
        "method": "getAllWithPage",
        "params": {
            "page": "number"
        }
    },
    "categories/:categoryId/posts/:page": {
        "controller": "Posts",
        "method": "getAllByCategoryWithPage",
        "params": {
            "categoryId": "number",
            "page": "number"
        }
    },
    "": {
        "controller": "Posts",
        "method": "handleRequest"
    },
    "admin": {
        "login": true,
        "controller": "Admin",
        "method": "getAll"
    },
    "admin/posts/:id": {
        "controller": "Admin",
        "method": "get",
        "params": {
            "id": "number"
        }
    }
}